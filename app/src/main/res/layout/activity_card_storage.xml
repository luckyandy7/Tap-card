<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/notion_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/notion_surface">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📇 명함 저장소"
            android:textAppearance="@style/TextAppearance.Notion.Headline"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만든 명함과 받은 명함을 태그별로 관리하세요"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/notion_surface"
        android:layout_marginTop="1dp">

        <!-- Filter Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAllCards"
                style="@style/Widget.Notion.Button.Filter"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="전체"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreatedCards"
                style="@style/Widget.Notion.Button.Filter"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="만든 명함"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReceivedCards"
                style="@style/Widget.Notion.Button.Filter"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="받은 명함" />

        </LinearLayout>

        <!-- Tag Filter Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태그 필터"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Tags RecyclerView (Horizontal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Cards Count -->
    <TextView
        android:id="@+id/cardsCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="명함 0개"
        android:textAppearance="@style/TextAppearance.Notion.Body"
        android:alpha="0.7"
        android:padding="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Cards List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📭"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장된 명함이 없습니다"
            android:textAppearance="@style/TextAppearance.Notion.Title"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 명함을 만들거나 QR 코드를 스캔해보세요"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:alpha="0.7"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateNewCard"
            style="@style/Widget.Notion.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 명함 만들기"
            android:layout_marginTop="24dp" />

    </LinearLayout>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="@style/Widget.Notion.Button.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:layout_margin="16dp" />

</LinearLayout> 