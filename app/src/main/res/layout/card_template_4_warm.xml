<?xml version="1.0" encoding="utf-8"?>
<!-- Template 4: Warm & Orange -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/surface"
    android:padding="24dp">

    <!-- Orange Accent Background -->
    <View
        android:id="@+id/accentBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/warm_circle_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김철수"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/template_4_primary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Company/Position -->
    <TextView
        android:id="@+id/companyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크리에이티브 디렉터"
        android:textSize="16sp"
        android:textColor="@color/template_4_accent"
        android:fontFamily="sans-serif"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toStartOf="@id/nameText" />

    <!-- Contact Info Group -->
    <LinearLayout
        android:id="@+id/contactGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/companyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/accentBackground"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📱 010-1234-5678"
            android:textSize="12sp"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💌 hello@example.com"
            android:textSize="12sp"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏠 서울특별시 강남구"
            android:textSize="12sp"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Bottom accent line -->
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/template_4_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 