<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <!-- 스타일 1 -->
    <LinearLayout
        android:id="@+id/cardStyle1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_bg1"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/previewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/previewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/previewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hong@example.com"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/previewCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Inc."
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/previewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 강남구"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- 스타일 2 -->
    <LinearLayout
        android:id="@+id/cardStyle2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/card_bg1"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/previewName_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#888888" />

        <TextView
            android:id="@+id/previewPhone_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/previewEmail_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hong@example.com"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/previewCompany2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회사명"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/previewAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- 스타일 3 -->
    <RelativeLayout
        android:id="@+id/cardStyle3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_bg1"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/previewName_style3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧑‍💼 홍길동"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/previewPhone_style3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📞 010-1234-5678"
            android:textSize="14sp"
            android:layout_below="@id/previewName_style3"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/previewEmail_style3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✉️ hong@example.com"
            android:textSize="14sp"
            android:layout_below="@id/previewPhone_style3"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/previewCompany_style3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏢 Company Inc."
            android:textSize="14sp"
            android:layout_below="@id/previewEmail_style3"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/previewAddress_style3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 서울 강남구"
            android:textSize="14sp"
            android:layout_below="@id/previewCompany_style3"
            android:layout_marginTop="4dp" />
    </RelativeLayout>
</FrameLayout>