<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 코드 생성 완료 📱"
            android:textAppearance="@style/TextAppearance.Notion.Headline"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다른 사람이 QR 코드를 스캔하면 명함을 볼 수 있습니다"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- QR Code Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR 코드"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- QR Code Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- QR Code Image -->
                    <ImageView
                        android:id="@+id/qrImageView"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/surface_variant"
                        android:scaleType="fitCenter" />

                    <!-- QR Info Text -->
                    <TextView
                        android:id="@+id/qrInfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR 코드를 스캔하면 명함 정보를 확인할 수 있습니다"
                        android:textAppearance="@style/TextAppearance.Notion.Caption"
                        android:gravity="center"
                        android:alpha="0.8" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용 방법"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- Instructions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Instructions Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💡"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QR 코드 공유 방법"
                            android:textAppearance="@style/TextAppearance.Notion.Body"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Instructions Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/surface_variant"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. 스크린샷을 찍어서 이미지로 공유하기"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. 'QR 코드 공유' 버튼으로 텍스트 공유하기"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. 다른 사람이 QR 코드를 스캔하면 명함 정보 표시"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4. 카메라 앱 또는 QR 코드 스캐너 앱 사용 가능"
                            android:textAppearance="@style/TextAppearance.Notion.Caption" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Share Options Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공유 옵션"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- Share Options Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Save as Image Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💾"
                            android:textSize="20sp"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이미지로 저장"
                                android:textAppearance="@style/TextAppearance.Notion.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QR 코드를 갤러리에 이미지로 저장합니다"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveImage"
                            style="@style/Widget.Notion.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저장" />

                    </LinearLayout>

                    <!-- NFC Share Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📱"
                            android:textSize="20sp"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NFC로 공유"
                                android:textAppearance="@style/TextAppearance.Notion.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="스마트폰을 터치해서 명함을 전송합니다"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShareNfc"
                            style="@style/Widget.Notion.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NFC" />

                    </LinearLayout>

                    <!-- QR Share Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📤"
                            android:textSize="20sp"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QR 코드 공유"
                                android:textAppearance="@style/TextAppearance.Notion.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="카카오톡, 메시지 등으로 QR 코드를 공유합니다"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShareQr"
                            style="@style/Widget.Notion.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공유" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToMain"
                style="@style/Widget.Notion.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메인으로 돌아가기"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 