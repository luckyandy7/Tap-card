<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명함 정보 💼"
            android:textAppearance="@style/TextAppearance.Notion.Headline"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 코드로 공유받은 명함입니다"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Card Image Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명함 이미지"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- Card Image Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <ImageView
                    android:id="@+id/viewCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@color/surface_variant" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처 정보"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- Personal Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👤"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이름"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/viewNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="홍길동"
                                android:textAppearance="@style/TextAppearance.Notion.Body"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Company -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏢"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="회사/직책"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/viewCompanyText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(주)스마트 / 개발자"
                                android:textAppearance="@style/TextAppearance.Notion.Body" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📍"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주소"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/viewAddressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="서울시 강남구"
                                android:textAppearance="@style/TextAppearance.Notion.Body" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Contact Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💬 연락하기"
                        android:textAppearance="@style/TextAppearance.Notion.Body"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📞"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전화번호"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/viewPhoneText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="010-1234-5678"
                                android:textAppearance="@style/TextAppearance.Notion.Body" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCallPhone"
                            style="@style/Widget.Notion.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="전화"
                            android:textSize="12sp"
                            android:minWidth="60dp" />

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📧"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이메일"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/viewEmailText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="hong@company.com"
                                android:textAppearance="@style/TextAppearance.Notion.Body" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSendEmail"
                            style="@style/Widget.Notion.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="메일"
                            android:textSize="12sp"
                            android:minWidth="60dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToMain"
                style="@style/Widget.Notion.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메인으로 돌아가기"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 