<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스타일 커스터마이징 🎨"
            android:textAppearance="@style/TextAppearance.Notion.Headline"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="템플릿을 자유롭게 커스터마이징하세요"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Preview Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실시간 미리보기"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="8dp" />

            <!-- Edit Hint -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 명함의 텍스트를 클릭하면 편집할 수 있습니다"
                android:textAppearance="@style/TextAppearance.Notion.Caption"
                android:alpha="0.7"
                android:layout_marginBottom="16dp" />

            <!-- Preview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/previewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <!-- Preview Content Container -->
                <FrameLayout
                    android:id="@+id/cardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="16dp">

                    <!-- 선택된 템플릿이 여기에 동적으로 로드됩니다 -->

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Customization Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커스터마이징 옵션"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- Text Size Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📏"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="텍스트 크기"
                            android:textAppearance="@style/TextAppearance.Notion.Body"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Name Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/nameSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="10"
                            android:valueTo="40"
                            android:value="16"
                            android:stepSize="1"
                            app:thumbColor="@color/tertiary"
                            app:trackColorActive="@color/tertiary"
                            app:trackColorInactive="@color/outline_variant" />

                    </LinearLayout>

                    <!-- Phone Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화번호"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/phoneSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="10"
                            android:valueTo="40"
                            android:value="14"
                            android:stepSize="1"
                            app:thumbColor="@color/tertiary"
                            app:trackColorActive="@color/tertiary"
                            app:trackColorInactive="@color/outline_variant" />

                    </LinearLayout>

                    <!-- Email Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/emailSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="10"
                            android:valueTo="40"
                            android:value="14"
                            android:stepSize="1"
                            app:thumbColor="@color/tertiary"
                            app:trackColorActive="@color/tertiary"
                            app:trackColorInactive="@color/outline_variant" />

                    </LinearLayout>

                    <!-- Company Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회사/직책"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/companySeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="10"
                            android:valueTo="40"
                            android:value="14"
                            android:stepSize="1"
                            app:thumbColor="@color/tertiary"
                            app:trackColorActive="@color/tertiary"
                            app:trackColorInactive="@color/outline_variant" />

                    </LinearLayout>

                    <!-- Address Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주소"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/addressSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="10"
                            android:valueTo="40"
                            android:value="12"
                            android:stepSize="1"
                            app:thumbColor="@color/tertiary"
                            app:trackColorActive="@color/tertiary"
                            app:trackColorInactive="@color/outline_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Text Color Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎨"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="텍스트 색상"
                            android:textAppearance="@style/TextAppearance.Notion.Body"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Color Options Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Row 1: Name & Phone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="이름"
                                    android:textAppearance="@style/TextAppearance.Notion.Caption"
                                    android:layout_marginBottom="4dp" />

                                <Spinner
                                    android:id="@+id/nameColorSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/notion_spinner_background" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전화번호"
                                    android:textAppearance="@style/TextAppearance.Notion.Caption"
                                    android:layout_marginBottom="4dp" />

                                <Spinner
                                    android:id="@+id/phoneColorSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/notion_spinner_background" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Row 2: Email & Company -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="이메일"
                                    android:textAppearance="@style/TextAppearance.Notion.Caption"
                                    android:layout_marginBottom="4dp" />

                                <Spinner
                                    android:id="@+id/emailColorSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/notion_spinner_background" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="회사/직책"
                                    android:textAppearance="@style/TextAppearance.Notion.Caption"
                                    android:layout_marginBottom="4dp" />

                                <Spinner
                                    android:id="@+id/companyColorSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/notion_spinner_background" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Row 3: Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="주소"
                                    android:textAppearance="@style/TextAppearance.Notion.Caption"
                                    android:layout_marginBottom="4dp" />

                                <Spinner
                                    android:id="@+id/addressColorSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/notion_spinner_background" />

                            </LinearLayout>

                            <!-- Empty space for balance -->
                            <View
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Font Style Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✍️"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="폰트 스타일"
                            android:textAppearance="@style/TextAppearance.Notion.Body"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Font Style Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="폰트 스타일"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:layout_marginBottom="4dp" />

                            <Spinner
                                android:id="@+id/fontStyleSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/notion_spinner_background" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="텍스트 스타일"
                                android:textAppearance="@style/TextAppearance.Notion.Caption"
                                android:layout_marginBottom="4dp" />

                            <Spinner
                                android:id="@+id/textStyleSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/notion_spinner_background" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Hidden elements for compatibility -->
            <EditText
                android:id="@+id/fontInput"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/Widget.Notion.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:layout_marginEnd="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinish"
                    style="@style/Widget.Notion.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="완료" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
