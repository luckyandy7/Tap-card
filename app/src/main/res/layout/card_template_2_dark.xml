<?xml version="1.0" encoding="utf-8"?>
<!-- Template 2: Dark & Gold Professional -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/template_2_primary"
    android:padding="24dp">

    <!-- Name Section (Top Left) -->
    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김철수"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Gold Accent Bar -->
    <View
        android:id="@+id/accentBar"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:background="@color/template_2_accent"
        android:layout_below="@id/nameText"
        android:layout_alignStart="@id/nameText"
        android:layout_marginTop="8dp" />

    <!-- Company/Title -->
    <TextView
        android:id="@+id/companyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEO &amp; Founder"
        android:textSize="14sp"
        android:textColor="@color/template_2_accent"
        android:fontFamily="sans-serif"
        android:layout_below="@id/accentBar"
        android:layout_alignStart="@id/nameText"
        android:layout_marginTop="12dp" />

    <!-- Contact Info (Bottom Right Aligned) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="end">

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp"
            android:alpha="0.9" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello@example.com"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp"
            android:alpha="0.9" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시 강남구"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:alpha="0.9" />

    </LinearLayout>

</RelativeLayout> 