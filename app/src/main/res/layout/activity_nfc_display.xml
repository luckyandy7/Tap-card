<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명함 공유 준비 완료 ✨"
            android:textAppearance="@style/TextAppearance.Notion.Headline"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다른 사람과 NFC로 명함을 공유하세요"
            android:textAppearance="@style/TextAppearance.Notion.Body"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Card Preview Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명함 미리보기"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- Card Preview Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Card Image Preview -->
                    <ImageView
                        android:id="@+id/cardPreviewImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:background="@color/surface_variant"
                        android:layout_marginBottom="16dp" />

                    <!-- Card Info Text -->
                    <TextView
                        android:id="@+id/cardInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="명함 정보가 여기에 표시됩니다"
                        android:textAppearance="@style/TextAppearance.Notion.Caption"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/surface_variant"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- NFC Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC 상태"
                android:textAppearance="@style/TextAppearance.Notion.Title"
                android:layout_marginBottom="16dp" />

            <!-- NFC Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Notion.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- NFC Status Icon and Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📱"
                            android:textSize="32sp"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nfcTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NFC 준비 중..."
                                android:textAppearance="@style/TextAppearance.Notion.Body"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="다른 기기를 가까이 대면 명함이 전송됩니다"
                                android:textAppearance="@style/TextAppearance.Notion.Caption" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Instructions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/surface_variant"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💡 사용 방법"
                            android:textAppearance="@style/TextAppearance.Notion.Body"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. 상대방도 NFC가 켜져 있는지 확인하세요"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. 두 기기의 뒷면을 서로 가까이 대세요"
                            android:textAppearance="@style/TextAppearance.Notion.Caption"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. 진동이나 소리가 들리면 전송 완료!"
                            android:textAppearance="@style/TextAppearance.Notion.Caption" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackToMain"
                    style="@style/Widget.Notion.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메인으로"
                    android:layout_marginEnd="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    style="@style/Widget.Notion.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다른 방법으로 공유" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
